@using ClientApp.Services
@inject NotificationService NotificationService

<div class="toast-container position-fixed bottom-0 start-0 p-3">
    @if (_isVisible)
    {
    <div class="toast align-items-center border-0 show @_backgroundColor">
        <div class="d-flex">
            <div class="toast-body">
                @_message
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" @onclick="Hide"></button>
        </div>
    </div>
    }
</div>

@code {
    private bool _isVisible = false;
    private string _backgroundColor;
    private string _message = "";

    protected override void OnInitialized()
    {
        NotificationService.OnShow += Show;
        NotificationService.OnHide += Hide;
    }

    private void Show(string message, string color = "text-bg-danger")
    {
        _message = message;
        _backgroundColor = color;
        _isVisible = true;
        StateHasChanged();
    }

    private void Hide()
    {
        _isVisible = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        NotificationService.OnShow -= Show;
        NotificationService.OnHide -= Hide;
    }
}
